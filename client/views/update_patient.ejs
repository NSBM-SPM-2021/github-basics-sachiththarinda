<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
               
            </div>
             <div class="form-title text-center">
                 <h2 class="text-dark">Update</h2>
                 <span class="text-light">Use the below form to update</span>
             </div>

             <!-- form handling -->
<form  method="POST" id="update_patient">
    <div class="new_patient">
        <div class="form-group">
            <label for="nic" class="text-light">ID Number</label>
            <input type="hidden" name="id" value="<%= patients._id %>">
             <input type="text" name="nic" value="<%= patients.nic %>" placeholder="Enter patient's NIC">
         </div>
         <div class="form-group">
             <label for="name" class="text-light">Name</label>
             <input type="text" name="name" value="<%= patients.name %>" placeholder="Enter patient's Name">
         </div>
         <div class="form-group">
             <label for="Age" class="text-light">Age</label>
             <input type="text" name="age" value="<%= patients.age %>" placeholder="Enter patient's Age">
         </div>
 
         
 
         <div class="form-group">
             <label for="vaccine" class="text-light">Vaccine</label>
             <div class="radio inline">
                 <input type="radio" id="radio-4" name="vaccine" value="Pfizer" <%= patients.status == 'Pfizer' ? 'checked' : '' %>>
                 <label for="radio-4" class="radio-label">Pfizer</label>
             </div>
             <div class="radio inline">
                 <input type="radio" id="radio-5" name="vaccine" value="Sinopharm" <%= patients.status == 'Sinopharm' ? 'checked' : '' %>>
                 <label for="radio-5" class="radio-label"> Sinopharm </label>
             </div>
         </div>
 
         <div class="form-group">
             <button type="submit" class="btn text-dark update">Save</button>
         </div>
    </div>
 </form>
        </div>
    </main>
<!-- /Main Site -->      


<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer --> 